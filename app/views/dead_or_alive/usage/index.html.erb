<table class='table table-striped'>
  <tr>
    <th> Action </th>
    <th> # </th>
  </tr>
  <% @actions.each do |action| %>
    <tr>
      <td><%=action.name %></td>
      <td><%=action.count %></td>
    </tr>
  <% end %>
</table>
